<UserControl x:Class="xpp_chatai_vs.View.CopilotWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml" 
             xmlns:local="clr-namespace:xpp_chatai_vs.View"
             xmlns:viewModel="clr-namespace:xpp_chatai_vs.ViewModel"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Name="MyToolWindow">
    <UserControl.Resources>
        <local:AlignmentConverter x:Key="AlignmentConverter" />
        <local:ForegroundConverter x:Key="ForegroundConverter" />
        <local:BackgroundConverter x:Key="BackgroundConverter" />
        <local:PercentageConverter x:Key="PercentageConverter" />
        <!--<ResourceDictionary>
            <viewModel:CopilotSessionViewModel x:Key="session" />
        </ResourceDictionary>-->
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" MaxHeight="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding Sessions}"
                          SelectedItem="{Binding CurrentSession, Mode=TwoWay}"
                          Grid.Column="0"
                          Margin="5"
                          HorizontalAlignment="Stretch">

                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Metadata.SessionName}" 
                                       Padding="3" 
                                       Foreground="Black"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>

                    <ComboBox.Template>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <!-- Define two rows in the Grid -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Place ToggleButton in the first row -->
                                <ToggleButton Name="Toggle"
                                              Focusable="True"
                                              Background="#F8F9FA"
                                              BorderBrush="#CED4DA"
                                              BorderThickness="1"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              Panel.ZIndex="0"
                                              Grid.Row="0"/>

                                <!-- Place ContentPresenter in the second row -->
                                <ContentPresenter Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{Binding Path=SelectedItem.Metadata.SessionName, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Margin="3,3,23,3"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Panel.ZIndex="1"
                                                  Grid.Row="1"/>

                                <Popup Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       PlacementTarget="{Binding ElementName=Toggle}"
                                       HorizontalOffset="-1">
                                    <Border Name="DropDownBorder"
                                            Width="{Binding ActualWidth, ElementName=Toggle}"
                                            MaxHeight="300"
                                            Background="White"
                                            BorderThickness="1"
                                            CornerRadius="2">
                                        <ScrollViewer>
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </ComboBox.Template>
                </ComboBox>
                <Button Grid.Column="1" Command="{Binding RenameSessionNameCommand}">Rename</Button>
                <Button Grid.Column="2" Command="{Binding AddNewSessionCommand}">+</Button>
                <Button Grid.Column="3" Command="{Binding RemoveSessionCommand}">-</Button>
            </Grid>            
        </Border>

        <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding CurrentSession.Messages}" HorizontalAlignment="Stretch">
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0, 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Padding="10"
                                    Background="{Binding MessageType, Converter={StaticResource BackgroundConverter}}"
                                    HorizontalAlignment="{Binding MessageType, Converter={StaticResource AlignmentConverter}}"
                                    MaxWidth="{Binding ActualWidth, ElementName=MessagesScrollViewer, Converter={StaticResource PercentageConverter}, ConverterParameter=0.85}"
                                    CornerRadius="10">
                                <mdxam:MarkdownScrollViewer 
                                    VerticalScrollBarVisibility="Hidden"
                                    xml:space="preserve"
                                    Markdown="{Binding Content}"
                                    Foreground="{Binding MessageType, Converter={StaticResource ForegroundConverter}}"
                                    HorizontalAlignment="Stretch" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#EEE">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputBox"
                         MaxHeight="100"
                         VerticalAlignment="Top"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         MinHeight="30"
                         Text="{Binding CurrentSession.InputText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding CurrentSession.SendCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1"
                        Content="Send"
                        VerticalAlignment="Top"
                        Height="30"
                        Margin="5,0,0,0"
                        Command="{Binding CurrentSession.SendCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
